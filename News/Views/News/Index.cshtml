@model List<News.Models.NewsOfListViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Новини</h2>

<ul class="news">
    @foreach (var n in Model)
    {
        <li>
            <h3>
                <a href="~/news/item/@n.Id">@n.Header</a>
                @if (@n.IsView) {<span class="text-warning" style="display:block;">Видима</span>}
                else { <span class="text-warning" style="display:block;">Невидима</span> }
            </h3>            
            <div class="text-info">@n.Date</div>
            <div class="text-success">@n.Author</div>
            @if (User.IsInRole("editor") || User.IsInRole("admin") || User.Identity.Name == @n.Author)
            {
                <div><a href="~/news/item/edit/@n.Id">Редагувати</a></div>
            }            
            <div></div>
        </li>
    }
</ul>

