@model List<News.business.ViewModel.NewsOfListViewModel>
@{
    ViewBag.Title = "Index";
}

<h2 class="news">Новини</h2>

<div class="news">
    @foreach (var n in Model)
    {
        <div>
            <h3><a href="~/news/item/@n.Id">@Html.Raw(n.Header)</a></h3>            
            <div class="text-info">@Html.Raw(n.Date)</div>
            <div class="text-success">@Html.Raw(n.Author)</div>
            @if (User.IsInRole("editor") || User.IsInRole("admin") || User.Identity.Name == @n.Author)
            {
                <div><a href="~/news/item/edit/@n.Id">Редагувати</a></div>
            } 
            @if (User.IsInRole("admin") || User.IsInRole("editor"))
            {
                <div>@(n.IsView == true? "Видима":"Невидима")</div>
            }
        </div>
    }
</div>

